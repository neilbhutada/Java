    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
    
         int d = Integer.parseInt(priceTextField.getText());
        int l = Integer.parseInt(quantityTextField.getText());
        int x = l*d;
       
        
        
        DefaultTableModel model = (DefaultTableModel) billingTable.getModel();
        model.addRow(new Object[]{ItemComboBox.getSelectedItem().toString(),priceTextField.getText(),quantityTextField.getText(),""+x} );
        int a = Integer.parseInt(priceTextField.getText());
        int h = Integer.parseInt(quantityTextField.getText());
       int b = Integer.parseInt(priceTextField1.getText());
       int c = (a*h)+b ;
       priceTextField1.setText(""+c);
        
    }                                        

    private void billingTableMouseEntered(java.awt.event.MouseEvent evt) {                                          
      
    }                                         

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
       DefaultTableModel model = (DefaultTableModel) billingTable.getModel();
       model.setValueAt(ItemComboBox.getSelectedItem(), billingTable.getSelectedRow(), 0);
       model.setValueAt(priceTextField.getText(), billingTable.getSelectedRow(), 1);
       int a = Integer.parseInt(priceTextField.getText());
       int b = Integer.parseInt(priceTextField1.getText());
       int d = Integer.parseInt(lolTextField.getText());
       int c = a+b-d;
       priceTextField1.setText(""+c);
       
    }                                        

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
       DefaultTableModel model = (DefaultTableModel) billingTable.getModel();
       model.removeRow(billingTable.getSelectedRow());
        int b = Integer.parseInt(priceTextField1.getText());
        int c = Integer.parseInt(lolTextField.getText());
        int d ;
        d = b - c;
        priceTextField1.setText(""+d);
    }                                        

    private void jButton4ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        MessageFormat Header = new MessageFormat("receipt");
        MessageFormat Footer = new MessageFormat("Please Visit Again");
       
        try 
        {
            billingTable.print(JTable.PrintMode.NORMAL,Header,Footer);
        }
        catch(java.awt.print.PrinterException e)
        {
            System.err.format("cannot print",e.getMessage());
        }
            
        
    }                                        

    private void billingTableMouseClicked(java.awt.event.MouseEvent evt) {                                          
       DefaultTableModel model = (DefaultTableModel) billingTable.getModel();
       lolTextField.setText(model.getValueAt(billingTable.getSelectedRow(),1).toString());
    }                                         

    private void priceTextField1ActionPerformed(java.awt.event.ActionEvent evt) {                                                
         
    }                                               

    private void jButton5ActionPerformed(java.awt.event.ActionEvent evt) {                                         
       DefaultTableModel model = (DefaultTableModel) billingTable.getModel();
       model.addRow(new Object[]{" "," "," "," ",priceTextField1.getText()});
    }                                        


